        <script>
        let projects = JSON.parse('<%- JSON.stringify(projects.map(project => ({ id: project.id, success: project.success, inProcess: project.inProcess, categories: project.categories, areaId: project.areaId, communitiesId: project.communitiesId }))) %>');
        let communities = JSON.parse('<%- JSON.stringify(communities.map(community => ({ id: community.id, area_id: community.area_id, }))) %>');        
        </script>
