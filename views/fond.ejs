        <form>
            <label> Сума внеску в грн
            </label>
            <input type="text" placeholder="Вкажіть суму внеску">
            <label> Спосіб орлати LIQ Pay
            </label>
            <input type="submit" value="Оплатити">
        </form>
    </div> 
    
